{% extends 'base.html.twig' %}

{% block body %}

    <div class=" body container">
        <div class="zone-title-login">

            <div class="zone-title title">
                <div class="fodeo">Fodéo</div>
            </div>

            <div class="zone-logo">
                <img src="{{ asset('img/logo.png') }}">
            </div>

        </div>

        <div class="form-login">

            <h1 class="login-title">Inscription</h1>

            <form action="{{ path('createUser') }}" method="post" id="formLogin">
                
                <div class="field-box">
                    <label for="email">Email :</label>
                    <input type="email" name="email_newUser" value="" required />
                </div>

                <div class="field-box">
                    <label for="username">Pseudo :</label>
                    <input type="text" name="username" value "" required>
                </div>

                <div class="field-box">
                    <label for="nomAdd">Nom :</label>
                    <input type="text" name="nom_newUser" value "" required>
                </div>

                <div class="field-box">
                    <label for="prenomAdd">Prénom :</label>
                    <input type="text" name="prenom_newUser" value "" required>
                </div>

                <div class="field-box">
                    <label for="password">Mot de passe :</label> 
                    <input type="password" id="password" name="mdp_newUser" value="" required />
                </div>

                <a href="{{ path('login') }}" class="lien-reset-mdp">Se connecter </a>

                {% for message in app.flashes('danger') %}
                    <div class="message-error" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="message-success" role="alert">
                        {{ message }}
                    </div>
                {% endfor %}

                <button type"submit">S'inscrire</button><br>
            </form>
        </div>
    </div>
{% endblock %}
