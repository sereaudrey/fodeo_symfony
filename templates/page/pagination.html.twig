{#
/**
 * @file
 * Twitter Bootstrap v4 Sliding pagination control implementation.
 *
 * View that can be used with the pagination module
 * from the Twitter Bootstrap CSS Toolkit
 * https://getbootstrap.com/docs/4.5/components/pagination/
 *
 */
#}
{% if pageCount > 1 %}
    <nav>
        {% set classAlign = (align is not defined) ? '' : align=='center' ? ' justify-content-center' : (align=='right' ? ' justify-content-end' : '') %}
        {% set classSize = (size is not defined) ? '' : size=='large' ? ' pagination-lg' : (size=='small' ? ' pagination-sm' : '') %}
        <ul class="pagination{{ classAlign }}{{ classSize }}">

            {% if previous is defined %}
                    <a class="page-link" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">
                        <li class="page-item">
                            <i class="fas fa-angle-left"></i>
                            {# &laquo;&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }} #}
                        </li>
                    </a>
            {% else %}
                <li class="page-item disabled">
                    <span class="page-link">
                        {# &laquo;&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }} #}
                        <i class="fas fa-angle-left"></i>
                    </span>
                </li>
            {% endif %}

            {% if startPage > 1 %}
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">
                        <li class="page-item">1</li>
                    </a>
                {% if startPage == 3 %}
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">
                        <li class="page-item">2</li>
                    </a>
                {% elseif startPage != 2 %}
                    <li class="page-item disabled">
                        <span class="page-link">&hellip;</span>
                    </li>
                {% endif %}
            {% endif %}

            {% for page in pagesInRange %}
                {% if page != current %}
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): page})) }}">
                    
                    <li class="page-item">{{ page }}</li>
                </a>
                {% else %}
                    <li class="page-item active">
                        <span class="page-link">{{ page }}</span>
                    </li>
                {% endif %}

            {% endfor %}

            {% if pageCount > endPage %}
                {% if pageCount > (endPage + 1) %}
                    {% if pageCount > (endPage + 2) %}
                        <li class="page-item disabled">
                            <span class="page-link">&hellip;</span>
                        </li>
                    {% else %}
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">
                            
                            <li class="page-item">{{ pageCount -1 }}</li>
                        </a>
                    {% endif %}
                {% endif %}
                    <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">
                        <li class="page-item">{{ pageCount }}</li>
                    </a>
            {% endif %}

            {% if next is defined %}
                <a class="page-link" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">
                    <li class="page-item">
                        <i class="fas fa-angle-right"></i>
                        {# {{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;&raquo; #}
                    </li>
                </a>
            {% else %}
                <li  class="page-item disabled">
                    <span class="page-link">
                        {# {{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;&raquo; #}
                        <i class="fas fa-angle-right"></i>
                    </span>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}